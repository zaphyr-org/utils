{
    "name": "zaphyr-org/utils",
    "description": "A collection of useful helper classes, which make a developer's workday a little easier.",
    "keywords": [
        "utils",
        "helper",
        "array",
        "country",
        "date",
        "file",
        "filter",
        "form",
        "html",
        "math",
        "string",
        "timezone"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "merloxx",
            "email": "merloxx@zaphyr.org",
            "homepage": "https://merloxx.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-mbstring": "*",
        "voku/portable-ascii": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Zaphyr\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaphyr\\UtilsTests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=PSR12 -n src",
        "cbf": "vendor/bin/phpcbf --standard=PSR12 -n src",
        "unit": "vendor/bin/phpunit --colors=always",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 512M",
        "test": [
            "@unit",
            "@phpstan",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
